    "test": "jest",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/time-tracker.git"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^16.0.3",
    "electron-builder": "^22.11.7",
    "jest": "^27.4.3",
    "spectron": "^14.0.0"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "graphql": "16.6.0",
    "graphql-request": "^3.7.0",
    "moment": "^2.29.1"
  },
  "build": {
    "appId": "com.example.myapp",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
